<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/imageListFragment">

    <fragment
        android:id="@+id/imageListFragment"
        android:name="com.poc.view.ImageListFragment"
        android:label="@string/app_name" >

        <action
            android:id="@+id/action_imageListFragment_to_imageDetailFragment"
            app:destination="@id/imageDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/imageDetailFragment"
        android:name="com.poc.view.ImageDetailFragment"
        android:label="Image Title"
        tools:layout="@layout/image_detail_fragment_view" />
</navigation>